<div class="container">
    <img src="../public/assets/img/burger.png" alt="image of burger">
    <h1>Eat Da Burger</h1>
    <div class="burger-lists">
        <div class="new-burgers">
            <ul class="new-burger-list">
                <br>
                {{#each burgers}}
                {{#unless devoured}}
                <div class="new-burgers">
                    <li class="new-item">
                        {{burger_name}}
                    </li>
                    <button class="change-eat" data-id="{{id}}" data-devour="false">
                        Devour
                    </button>
                </div>
                {{/unless}}
                {{/each}}
            </ul>
            <div class="eaten-list">
                <h2 class="burg-eaten">Burgers eaten</h2>
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <li>{{burger_name}}</li>
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <h2>Add a Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="burger">
        </div>
        <br>
        <button type="submit">Add Burger</button>
        <h4>Enter a burger you want to eat and click Add Burger.</h4>
    </form>
</div>