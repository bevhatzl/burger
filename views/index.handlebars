<img src="../public/assets/img/burger.png" alt="image of burger">

<h2>Eat Da Burger</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{!-- {{devoured=false}} --}}
    <li>
        {{burger_name}}
    </li>
    <button class="change-eat" data-id="{{id}}" data-devour="false">
        Devour
    </button>


    {{!-- <input type="button" name="devoured" value="Devour It"> </div> --}}

    {{!-- <button class="change-sleep" data-id="{{id}}" data-newsleep="{{sleep}}">
        {{#if sleep}}SLEEP TIME!{{else}}WAKE UP!{{/if}}
    </button> --}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers eaten</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{!-- {{devoured=true}} --}}
    {{burger_name}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burger">
    </div>



    <button type="submit">Add Burger</button>
</form>